  (function() {
    function getScript(url,success){
      var script=document.createElement('script');
      script.src=url;
      var head=document.getElementsByTagName('head')[0],
      done=false;
      script.onload=script.onreadystatechange = function(){
        if ( !done && (!this.readyState || this.readyState == 'loaded' || this.readyState == 'complete') ) {
          done=true;
          success();
          script.onload = script.onreadystatechange = null;
          head.removeChild(script);
        }
      };
      head.appendChild(script);
    }

    getScript('/javascripts/underscore/underscore.js',function(){
      getScript('/javascripts/jquery/dist/jquery.min.js',function(){
        getScript('/javascripts/jquery-smooth-scroll/jquery.smooth-scroll.min.js',function(){
          getScript('/javascripts/angularjs/angular.min.js',function(){
            getScript('/javascripts/angular-route/angular-route.min.js',function(){
              getScript('/javascripts/js.js',function(){ init(); });
            });
          });
        });
      });
    });
  })();
